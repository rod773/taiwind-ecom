---
import imgmain from "../../public/3.1 bg.jpg";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="./index.css" />

    <title>Tailwind Snipcart</title>
  </head>
  <body>
    <nav class="py-2 px-4 bg-black text-white sticky top-0 z-10 flex">
      <div>
        <h1 class="text-2xl"><span class="italic">Man</span>Bags</h1>
        <p class="text-slate-400">Luxury bags for men</p>
      </div>
      <div class="ml-auto">cart</div>
    </nav>
    <main>
      <header
        class="bg-imgmain flex bg-cover bg-center h-[calc(100vh-72px)] min-h-[400px]"
      >
        <div class="m-auto font-semibold text-center">
          <h1 class="text-3xl mb-8">
            <span class="italic">Man</span>Bags
          </h1>
          <h1
            class="mb-8 drop-shadow-lg text-7xl underline text-white decoration-black underline-offset-8"
          >
            Clean &amp; Modern.
          </h1>
          <p class="text-lg mb-8 drop-shadow-lg">Luxury Bags for Men</p>
          <button class="bg-black text-white">Browse The Collection</button>
        </div>
      </header>
    </main>
  </body>
</html>
